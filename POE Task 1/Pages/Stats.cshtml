<section class="services container">
        <!-- Heading -->
        <h2 class="heading" style="font-size: 3rem; text-transform: uppercase; color: #c77dff; text-align: left; margin-bottom: 2rem;">Total Donations</h2><br />
        <!-- Services Content -->
        <div class="services-content" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 3rem;">
            <div class="services-box" style="display: flex; flex-direction: column; align-items: center; text-align: center; padding: 15px; background: #171b3c; border-radius: 0.4rem; transition: 0.5s all cubic-bezier(0.075, 0.82, 0.165, 1);">
                <i class='bx bx-first-aid' style="font-size: 1.4rem; color: #FF9F1C; padding: 10px; border-radius: 5rem; border: 2px dashed #fff;"></i> 
                <h2 style="font-size: 1.1rem; font-weight: 500; margin: 0.5rem 0; color: #FF9F1C;">Total Money</h2>
                <p style="font-size: 0.938rem; color: #fff;">R @(Model.availableMoney)</p>
            </div>
            <div class="services-box" style="display: flex; flex-direction: column; align-items: center; text-align: center; padding: 15px; background: #171b3c; border-radius: 0.4rem; transition: 0.5s all cubic-bezier(0.075, 0.82, 0.165, 1);">
                <i class='bx bx-lock' style="font-size: 1.4rem; color: #FF9F1C; padding: 10px; border-radius: 5rem; border: 2px dashed #fff;"></i> 
                <h2 style="font-size: 1.1rem; font-weight: 500; margin: 0.5rem 0; color: #FF9F1C;">Total Goods</h2>
                <p style="font-size: 0.938rem; color: #fff;">@(Model.numberofgoods)</p>
            </div>
            <div class="services-box" style="display: flex; flex-direction: column; align-items: center; text-align: center; padding: 15px; background: #171b3c; border-radius: 0.4rem; transition: 0.5s all cubic-bezier(0.075, 0.82, 0.165, 1);">
                <i class='bx bx-wallet' style="font-size: 1.4rem; color: #FF9F1C; padding: 10px; border-radius: 5rem; border: 2px dashed #fff;"></i> 
                <h2 style="font-size: 1.1rem; font-weight: 500; margin: 0.5rem 0; color: #FF9F1C;">Active Disasters</h2>
                <p style="font-size: 0.938rem; color: #fff;">@(Model.numberofdisaster)</p>
            </div>
        </div>
</section>
<br />
<br />
<section class="services container">
        <!-- Heading -->
        <h2 class="heading" style="font-size: 3rem; text-transform: uppercase; color: #c77dff; text-align: left; margin-bottom: 2rem;">Currently Active Disasters</h2><br />
        <table class="table">
    <thead>
        <tr class="table-dark">
            <th>No.</th>
            <th>Location</th>
            <th>Description</th>
            <th>Allocated Money</th>
            <th>Allocated Goods</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listDisasters)
        {
            <tr class="table-info">
                <td>@item.id</td>
                <td>@item.location</td>
                <td>@item.description</td>
                <td>R @item.allocatedmoney</td>
                <td>@item.allocatedgoods</td>
            </tr>
        }
    </tbody>
</table>
</section>

